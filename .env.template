# ============================================
# SUPABASE CONFIGURATION (REQUIRED)
# ============================================
# Get these from: https://supabase.com → Your Project → Settings → API

# Your Supabase Project URL (looks like: https://xxxxx.supabase.co)
SUPABASE_URL=your_supabase_project_url_here

# Your Supabase anon/public key (long string starting with eyJ...)
SUPABASE_KEY=your_supabase_anon_key_here


# ============================================
# APPLICATION SETTINGS
# ============================================

# Application name displayed in UI
APP_NAME=Smart Resume Analyzer

# Environment: development, staging, or production
ENVIRONMENT=development


# ============================================
# MODEL CONFIGURATIONS
# ============================================

# Path to TF-IDF vectorizer pickle file
TFIDF_MODEL_PATH=tfidf.pkl

# Path to ML model pickle file
ML_MODEL_PATH=model.pkl

# spaCy model name for NER
SPACY_MODEL=en_core_web_sm


# ============================================
# FILE UPLOAD SETTINGS
# ============================================

# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# Allowed file extensions (comma-separated, no spaces)
ALLOWED_EXTENSIONS=pdf,docx

# Directory to save categorized resumes
OUTPUT_DIRECTORY=categorized_resumes


# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable AI summarization (requires transformers + torch/tensorflow)
# Set to false to speed up startup if you don't need summarization
ENABLE_SUMMARIZATION=true

# Enable/disable course recommendations
ENABLE_COURSE_RECOMMENDATIONS=true

# Enable/disable NER-based skill extraction (requires spaCy model)
ENABLE_NER_EXTRACTION=true


